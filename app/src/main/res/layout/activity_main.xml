<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_bar"
            android:scrollbars="none">
            <!--optimize-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/arc_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/main_item_color"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:gravity="center_vertical">

                            <com.ultra.fast.charger.battery.view.ArcProgress
                                android:id="@+id/arc_progress"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                custom:arc_finished_color="@color/arc_process_color"
                                custom:arc_suffix_text_size="16sp"
                                custom:arc_text_color="@color/white"
                                custom:arc_unfinished_color="@color/arc_default_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_optimize_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:src="@drawable/warning_ico_o_50" />

                                <TextView
                                    android:id="@+id/tv_alert"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="3"
                                    android:textColor="@color/white"
                                    android:textSize="28sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_optimize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/device_tv_known"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text="OPTIMIZE"
                                android:textColor="#FFF" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_ad_container"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/main_item_color">

                    <ImageView
                        android:id="@+id/ad_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ad_label_g_48" />

                    <ImageView
                        android:id="@+id/iv_ad_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ad_lable"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_ad_icon"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/tv_ad_btn"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ad_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#99a1ae"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_ad_btn"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="DOWNLOAD"
                        android:textColor="#fff"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:background="@drawable/ad_btn_bg"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <!-- tools layout-->
                <android.support.v7.widget.CardView
                    android:id="@+id/tools_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="240.0dip"
                        android:layout_centerInParent="true"
                        android:background="@color/main_item_color"
                        android:orientation="vertical"
                        android:weightSum="3.0">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="3.0">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_wifi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/wifi_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_wifi"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_wifi"
                                        android:textColor="@color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_bluetooth"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/bluetooth_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_bluetooth"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_bluetooth"
                                        android:textColor="@color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_brightness"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/brightness_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_brightness"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_brightness"
                                        android:textColor="@color/white" />
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="3.0">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_rotate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/rotate_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_rotate"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_rotate"
                                        android:textColor="@color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_mode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/mode_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_mode"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_mode"
                                        android:textColor="@color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_timeout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ten_btn" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_timeout"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_timeout"
                                        android:textColor="@color/white" />
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:paddingBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="3.0">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_gps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/gps_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_gps"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_gps"
                                        android:textColor="@color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_data"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/data_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_data"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_data"
                                        android:textColor="@color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1.0">

                                    <ImageView
                                        android:id="@+id/iv_airplane"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/airplane_btn_default" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_airplane"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/fast_charger_airplane"
                                        android:textColor="@color/white" />
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--temperate-->
                <android.support.v7.widget.CardView
                    android:id="@+id/temp_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:foreground="?android:selectableItemBackground">


                    <!--Linear UI-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_item_color"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp">

                            <ImageView
                                android:id="@+id/iv_temperate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/temperature_ico_g_52" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="14dp"
                                android:layout_toRightOf="@id/iv_temperate"
                                android:text="@string/main_temperature"
                                android:textColor="@color/main_item_text_color"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_temperate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="24dp"
                                android:text=""
                                android:textColor="@color/title_green_color"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp">

                            <ImageView
                                android:id="@+id/iv_voltage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/voltage_ico_g_52" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="14dp"
                                android:layout_toRightOf="@id/iv_voltage"
                                android:text="@string/main_voltage"
                                android:textColor="@color/main_item_text_color"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_voltage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="24dp"
                                android:text=""
                                android:textColor="@color/title_green_color"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp">

                            <ImageView
                                android:id="@+id/iv_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/level_ico_g_52" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="14dp"
                                android:layout_toRightOf="@id/iv_level"
                                android:text="@string/main_level"
                                android:textColor="@color/main_item_text_color"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="24dp"
                                android:text=""
                                android:textColor="@color/title_green_color"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/feed_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/main_item_color"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/TxtRateTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="8.0dip"
                            android:text="Love Ultra Fast Charger\napplication?"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/TxtRateDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/TxtRateTitle"
                            android:paddingLeft="16.0dip"
                            android:paddingRight="16.0dip"
                            android:paddingTop="12.0dip"
                            android:text="@string/main_rate_summary"
                            android:textColor="@color/white"
                            android:textSize="15.0sp" />

                        <RelativeLayout
                            android:id="@+id/Rlout_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8.0dip">

                            <Button
                                android:id="@+id/btn_feedbak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8.0dip"
                                android:background="?android:selectableItemBackground"
                                android:padding="8.0dip"
                                android:text="FEEDBACK"
                                android:textColor="@color/main_item_text_color" />

                            <Button
                                android:id="@+id/btn_ratenow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/btn_feedbak"
                                android:background="?android:selectableItemBackground"
                                android:padding="8.0dip"
                                android:text="RATE 5 STARS"
                                android:textColor="@color/main_item_text_color" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/share_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@color/main_item_color"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Recommend to friends"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="If you have a minuite,can you please help us to spread in the world about Ultra Fast Charger."
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!--navigation view-->
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:background="@color/main_color"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#0a1b2b">

            <ImageView
                android:id="@+id/left_iv_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/avatar_img_142" />

            <TextView
                android:id="@+id/left_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/left_iv_icon"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recomand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="#102030"
            android:paddingTop="18dp">

            <ImageView
                android:id="@+id/left_iv_recommand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/recommend_ico_w_44" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/left_iv_recommand"
                android:text="@string/recommand_to_friends"
